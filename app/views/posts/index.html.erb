<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="header">
    <h1 class="text-center">Posts</h1>
    <%= link_to "New post",
                new_post_path,
                class: "btn btn-success",
                data: { turbo_frame: dom_id(Post.new) } %>
  </div>
  
  <br>
  
  <%= turbo_frame_tag Post.new %>

  <%# turbo_stream_from "posts" %>
  
  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
  <% end %>
</div>
